<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wt.courseselectionsystem.dao.CourseDao">

    <resultMap id="CourseMap" type="com.wt.courseselectionsystem.model.dao.basebean.Course">
        <result column="id" property="id" jdbcType="INTEGER"/>
        <result column="course_no" property="courseNo"/>
        <result column="course_name" property="courseName"/>
        <result column="credit" property="credit"/>
        <result column="course_hous" property="courseHours"/>
        <result column="student_number" property="studentNumber"/>
    </resultMap>

    <insert id="insertCourse">
        insert into course(course_no,course_name, credit, course_hours,student_number)
            value (#{course.courseNo}, #{course.courseName}, #{course.credit}, #{course.courseHours}, #{course.studentNumber});
    </insert>

    <select id="selectByCourseNo" resultMap="CourseMap">
        select id, course_no, course_name, credit,course_hours,student_number
        from course
        where course_no = #{courseNo};
    </select>

</mapper>

