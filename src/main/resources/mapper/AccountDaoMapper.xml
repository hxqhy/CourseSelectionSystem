<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wt.courseselectionsystem.dao.AccountDao">

    <resultMap id="AccountMap" type="com.wt.courseselectionsystem.model.dao.basebean.Account">
        <result column="id" property="id" jdbcType="INTEGER"/>
        <result column="account_no" property="accountNo"/>
        <result column="password" property="password"/>
        <result column="account_type" property="accountType"/>
    </resultMap>

    <insert id="insertAccount">
        insert into account(account_no, password, account_type)
            value (#{accountNo}, #{password}, #{accountType});
    </insert>

    <select id="selectByAccountNo" resultMap="AccountMap">
        select id, account_no, password, account_type
        from account
        where account_no = #{accountNo};
    </select>

</mapper>
